@import "tailwindcss/preflight";
@tailwind utilities;
@import "tailwindcss";
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* App theme variables to enforce Light/Dark background and text colors */
:root {
  --app-bg: #ffffff;
  --app-text: #000000;
}

.dark {
  --app-bg: #000000;
  --app-text: #ffffff;
}

/* Apply base background and text color globally; use !important to ensure override of utility classes when needed */
body {
  background-color: var(--app-bg) !important;
  color: var(--app-text) !important;
}

/* Ensure common Tailwind gray text classes become readable in dark mode */
.dark .text-gray-900,
.dark .text-gray-800,
.dark .text-gray-700,
.dark .text-gray-600,
.dark .text-gray-500 {
  color: var(--app-text) !important;
}

/* Make explicit white text adapt to current theme: black in light, white in dark */
.text-white {
  color: var(--app-text) !important;
}

/* Convert white backgrounds to dark in dark mode while keeping other color utilities intact */
.dark .bg-white,
.dark .bg-white\/6,
.dark .bg-white\/5,
.dark .bg-white\/70 {
  background-color: var(--app-bg) !important;
}

/* Ensure light mode uses no background image and plain white background */
body {
  background-image: none !important;
  background-color: var(--app-bg) !important;
}

/* Restore dark-mode background image used by the original theme */
.dark body {
  background-image: linear-gradient(#0000008c,#0000008c), url('https://images.unsplash.com/photo-1557682250-5fd4bde04d48?auto=format&fit=crop&w=1800&q=80') !important;
  background-position: 50% !important;
  background-size: cover !important;
  background-color: var(--app-bg) !important;
}
